<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">
    <TextView
        android:id="@+id/text_message_send"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@drawable/bg_message_send"
        android:padding="10dp"
        android:text="Hello, this is a message"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:maxWidth="75dp" />
    <TextView
        android:id="@+id/time_send"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="9:30 AM"
        android:gravity="center"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/text_message_send"
        android:layout_alignBottom="@id/text_message_send"/>
</RelativeLayout>
